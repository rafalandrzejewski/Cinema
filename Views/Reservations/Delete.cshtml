@model Cinema.Models.Reservation
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Czy na pewno chcesz to usunąć?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seance.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeatNumbers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeatNumbers)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        @if (User.IsInRole("SuperAdmin"))
        {
            <a asp-action="Index"><input type="button" value="Wróć do listy" class="btn btn-danger" /></a>
        }
        else
        {
            <a asp-action="IndexUser"><input type="button" value="Wróć do listy" class="btn btn-danger" /></a>
        }
        </form>
    </div>
