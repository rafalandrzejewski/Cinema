@model IEnumerable<Cinema.Models.Seance>

@{
    ViewData["Title"] = "Repertuar";
}

<h1>Repertuar</h1>

<p>
    <a asp-action="Create"><input type="button" value="Dodaj nowy seans" class="btn btn-danger" /></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                Ilość wolnych miejsc:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FreeSeatCount) / @Html.DisplayFor(modelItem => item.MaxSeatCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Title)
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><input type="button" value="Edytuj" class="btn btn-danger" /></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><input type="button" value="Szczegóły" class="btn btn-danger" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><input type="button" value="Usuń" class="btn btn-danger" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
