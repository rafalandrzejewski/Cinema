@model Cinema.Models.Seance

@{
    ViewData["Title"] = "Stwórz";
}

<h1>Stwórz</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" min=@DateTime.Now.ToString("u") value=@DateTime.Now class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxSeatCount" class="control-label"></label>
                <input asp-for="MaxSeatCount" class="form-control" />
                <span asp-validation-for="MaxSeatCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group pt-2">
                <input type="submit" value="Dodaj" class="btn btn-danger" /> |
                @if (User.IsInRole("SuperAdmin"))
                {
                <a asp-action="Index"><input type="button" value="Wróć do listy" class="btn btn-danger" /></a>
                }
                else
                {
                <a asp-action="IndexUser"><input type="button" value="Wróć do listy" class="btn btn-danger" /></a>
                }
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
